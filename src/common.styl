$browser-default-font-size = 75px

$browser-default-font-sizeIpad = 204.8px

rem($px)
	($px / $browser-default-font-size)rem

remIpad($px)
	($px / $browser-default-font-sizeIpad)rem

setfont($size, $color=#000, $align=left, $weight=400)
	font-size rem($size)
	color $color
	text-align $align
	font-weight $weight

setfontIpad($size, $color=#000, $align=left, $weight=400)
	font-size remIpad($size)
	color $color
	text-align $align
	font-weight $weight